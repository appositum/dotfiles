# Package management
alias inst='sudo pacman -S'
alias remove='sudo pacman -R'
alias update='sudo pacman -Syu'

alias insty='yaourt -S'
alias removy='yaourt -R'

# tar management
alias tarxz='tar xvf'
alias targz='tar zxvf'
alias tarbz2='tar jxvf'

alias pip3='sudo python3 -m pip'

